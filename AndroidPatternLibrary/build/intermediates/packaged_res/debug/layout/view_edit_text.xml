<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/lg"
    android:paddingEnd="@dimen/lg"
    android:orientation="vertical"
    android:background="@drawable/background_white_rounded_bottom"
    tools:context="com.dequeuniversity.FragmentEditTextViews">

    <TextView style="@style/TextAppearance.heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/md"
        android:text="@string/attest_minor_violation_edit_text"/>

    <LinearLayout
        android:id="@+id/violationDescription"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/xlg"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/edit_text_demo_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/edit_text_demo_layout1.5"
                style="@style/TextViewStyle.body"
                android:layout_width="0dp"
                android:layout_weight=".85"
                android:layout_marginEnd="@dimen/xlg"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/border_minor"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_text_demo1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:contentDescription="@string/edit_text_hint_default"
                    android:minHeight="@dimen/wcag_min_touch_size"
                    android:layout_weight=".15"
                    android:paddingBottom="20dp" />

            </LinearLayout>

            <ImageButton
                android:contentDescription="@string/collapsible_content_description_closed"
                android:background="@drawable/closed"
                android:id="@+id/edit_text_collapsible_button1"
                android:layout_width="@dimen/wcag_min_touch_size"
                android:layout_height="@dimen/wcag_min_touch_size"
                android:minWidth="@dimen/wcag_min_touch_size"
                android:minHeight="@dimen/wcag_min_touch_size"
                android:layout_gravity="center_vertical|end" />

        </LinearLayout>

        <TextView
            android:id="@+id/edit_text_help_view1"
            style="@style/CollapsibleText"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_text_failing" />

    </LinearLayout>

    <TextView style="@style/TextAppearance.heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/md"
        android:text="@string/attest_violation_passing"/>

    <LinearLayout
        android:id="@+id/violationDescription2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xlg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/edit_text_demo_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/edit_text_demo2"
                style="@style/TextViewStyle.body"
                android:layout_width="0dp"
                android:layout_weight=".85"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/xlg"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/border_fixed"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edit_text_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:labelFor="@id/edit_text2"
                    android:text="@string/passing"
                    android:textAlignment="gravity"
                    android:textColor="@color/aac_worldspace_black"
                    android:visibility="visible" />

                <EditText android:id="@+id/edit_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/wcag_min_touch_size"
                    android:hint="@string/name_john"/>

            </LinearLayout>

            <ImageButton
                android:contentDescription="@string/collapsible_content_description_closed"
                android:background="@drawable/closed"
                android:id="@+id/edit_text_collapsible_button2"
                android:layout_width="@dimen/wcag_min_touch_size"
                android:layout_height="@dimen/wcag_min_touch_size"
                android:minWidth="@dimen/wcag_min_touch_size"
                android:minHeight="@dimen/wcag_min_touch_size"
                android:layout_gravity="center_vertical|end" />

        </LinearLayout>

        <TextView
            android:id="@+id/edit_text_help_view2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CollapsibleText"
            android:text="@string/edit_text_passing" />


    </LinearLayout>
</LinearLayout>









