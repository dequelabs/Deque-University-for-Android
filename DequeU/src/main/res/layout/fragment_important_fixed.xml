<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dequesystems.accessibility101.labels.LabelsAboutFragment"
    android:background="@color/aac_story_fixed_background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout android:id="@+id/aacDemoContent"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/aac_global_border"
            android:padding="@dimen/aac_global_border"
            android:orientation="vertical"
            android:background="@color/aac_background_text"
            android:layout_weight="1">

            <LinearLayout android:id="@+id/aacImportantLayoutTopMain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/aac_global_border"
                android:padding="@dimen/aac_global_border"
                android:elevation="@dimen/aac_elevation_level_1"
                android:orientation="vertical"
                android:background="@color/aac_background_text">

                <TextView android:id="@+id/aacImportantTopHeadingMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/AACTextAppearance.heading"
                    android:text="@string/aac_important_content_heading_top"
                    android:background="@color/aac_background_text"
                    android:padding="@dimen/aac_global_border" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/aac_global_border"
                    android:layout_margin="@dimen/aac_global_border"
                    android:elevation="@dimen/aac_elevation_level_2"
                    android:background="@color/aac_worldspace_white">

                    <TextView android:id="@+id/aacImportantTopTextViewSetting1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/AACTextAppearance.label"
                        android:text="@string/aac_labels_setting_1"
                        android:layout_weight="1"
                        android:labelFor="@+id/aacImportantTopSwitchSetting1"/>

                    <Switch android:id="@+id/aacImportantTopSwitchSetting1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/AACTextAppearance.label"
                        android:layout_weight="0"
                        android:showText="false"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/aac_global_border"
                    android:layout_margin="@dimen/aac_global_border"
                    android:elevation="@dimen/aac_elevation_level_2"
                    android:background="@color/aac_worldspace_white">

                    <TextView android:id="@+id/aacImportantTopTextViewSetting2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/AACTextAppearance.label"
                        android:text="@string/aac_labels_setting_2"
                        android:layout_weight="1"
                        android:labelFor="@+id/aacImportantTopSwitchSetting2" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/AACTextAppearance.label"
                        android:layout_weight="0"
                        android:id="@+id/aacImportantTopSwitchSetting2"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/aac_global_border"
                    android:layout_margin="@dimen/aac_global_border"
                    android:elevation="@dimen/aac_elevation_level_2"
                    android:background="@color/aac_worldspace_white">

                    <TextView android:id="@+id/aacImportantTopTextViewSetting3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/AACTextAppearance.label"
                        android:text="@string/aac_labels_setting_3"
                        android:layout_weight="1"
                        android:labelFor="@+id/aacImportantTopSwitchSetting3" />

                    <Switch android:id="@+id/aacImportantTopSwitchSetting3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/AACTextAppearance.label"
                        android:layout_weight="0" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/aacImportantLayoutBottomMain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/aac_global_border"
                android:padding="@dimen/aac_global_border"
                android:elevation="@dimen/aac_elevation_level_1"
                android:orientation="vertical"
                android:background="@color/aac_background_text"
                android:importantForAccessibility="no">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/AACTextAppearance.heading"
                    android:text="@string/aac_important_content_heading_bottom"
                    android:background="@color/aac_background_text"
                    android:padding="@dimen/aac_global_border"
                    android:id="@+id/aacImportantBottomHeading"/>

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/aac_global_border"
                    android:elevation="@dimen/aac_elevation_level_2"
                    android:background="@color/aac_worldspace_white"
                    android:textAppearance="@style/AACTextAppearance.label"
                    android:text="@string/aac_labels_setting_1"
                    android:id="@+id/aacImportantBottomSwitch1" />

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/aac_global_border"
                    android:elevation="@dimen/aac_elevation_level_2"
                    android:background="@color/aac_worldspace_white"
                    android:textAppearance="@style/AACTextAppearance.label"
                    android:text="@string/aac_labels_setting_2"
                    android:id="@+id/aacImportantBottomSwitch2"/>

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/aac_global_border"
                    android:elevation="@dimen/aac_elevation_level_2"
                    android:background="@color/aac_worldspace_white"
                    android:textAppearance="@style/AACTextAppearance.label"
                    android:text="@string/aac_labels_setting_3"
                    android:id="@+id/aacImportantBottomSwitch3"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/aac_global_border"
            android:padding="@dimen/aac_global_border"
            android:text="@string/aac_important_fixed_paragraph"
            android:textAppearance="@style/AACTextAppearance.body"
            android:background="@color/aac_background_text"
            android:layout_gravity="left"
            android:layout_weight="1" />
    </LinearLayout>
</ScrollView>