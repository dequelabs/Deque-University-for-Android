<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Transparent" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AACAppTheme" parent="Theme.AppCompat.Light">

        <item name="android:actionBarStyle">@style/AACAppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/AACAppTheme.ActionBar</item>

        <item name="android:windowBackground">@color/brand_primary_gray_or_accent</item>
        <item name="android:actionMenuTextColor">@color/aac_navigation_drawer_text</item>
    </style>

    <style name="AACTextViewStyle" parent="android:Widget.TextView">
        <item name="android:paddingStart">@dimen/lg</item>
        <item name="android:paddingEnd">@dimen/lg</item>
        <item name="android:background">@drawable/background_white_rounded</item>
    </style>

    <style name="AACTextViewStyle.body">
        <item name="android:textAppearance">@style/AACTextAppearance.body</item>
    </style>

    <style name="AACTextViewStyle.heading">
        <item name="android:textAppearance">@style/AACTextAppearance.heading</item>
        <item name="android:textColor">@color/brand_alt_text_or_accent</item>
    </style>

    <style name="AACTextViewStyle.top">
        <item name="android:background">@drawable/background_white_rounded_top</item>
    </style>

    <style name="AACTextViewStyle.middle">
        <item name="android:background">@color/aac_background_text</item>
    </style>

    <style name="AACTextViewStyle.bottom">
        <item name="android:background">@drawable/background_white_rounded_bottom</item>
    </style>

    <style name="AACAppTheme.ActionBar" parent="@style/Widget.AppCompat.ActionBar">

        <item name="android:background">@color/aac_action_bar_background</item>
        <item name="background">@color/aac_worldspace_white</item>

        <item name="android:titleTextStyle">@style/AACAppTheme.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/AACAppTheme.ActionBar.TitleTextStyle</item>

    </style>

    <style name="AACAppTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/aac_navigation_drawer_text</item>
    </style>


    <style name="AACTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/aac_text_body</item>
    </style>

    <style name="AACTextAppearance.body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/brand_primary_gray_or_accent</item>
    </style>

    <style name="AACTextAppearance.title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AACTextAppearance.heading">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/brand_primary_navy</item>
    </style>

    <style name="AACTextAppearance.navigation_drawer">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AACTextAppearance.navigation_drawer_heading">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/aac_navigation_drawer_text</item>
    </style>

    <style name="AACTextAppearance.label">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AACTextAppearance.link">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorLink">@color/aac_text_link</item>
        <item name="android:textColor">@color/aac_text_link</item>
    </style>

    <style name="AACAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AACAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AACAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button">
        <item name="android:background">@color/aac_worldspace_red</item>
    </style>
</resources>