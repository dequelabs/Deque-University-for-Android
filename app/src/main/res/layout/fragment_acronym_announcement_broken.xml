<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aac_story_broken_background"
    tools:context="com.dequesystems.accessibility101.contentdescriptions.ContDescBrokenFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/aac_worldspace_white"
            android:layout_margin="@dimen/aac_global_border"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aac_acronym_broken_flight"
                android:padding="@dimen/aac_global_border"
                android:textAppearance="@style/AACTextAppearance.body"
                android:layout_margin="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/aac_worldspace_white"
            android:layout_margin="@dimen/aac_global_border"
            android:padding="@dimen/aac_global_border"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/aac_acronym_broken_heading_1"
                android:textAppearance="@style/AACTextAppearance.heading"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aac_acronym_broken_conclusion"
                android:padding="@dimen/aac_global_border"
                android:textAppearance="@style/AACTextAppearance.body"/>

            <com.dequesystems.a11yframework.TextViewLink
                android:id="@+id/aac_acronym_annoucement_link_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:textAppearance="@style/AACTextAppearance.link"
                android:text="@string/aac_link_wcag_3_1_4"/>

        </LinearLayout>

    </LinearLayout>



</ScrollView>
