<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dequesystems.accessibility101.edittexts.EditTextAboutFragment"
    android:background="@color/aac_story_background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/aac_global_border"
            android:padding="@dimen/aac_global_border"
            android:background="@color/aac_worldspace_white"
            android:textAppearance="@style/AACTextAppearance.body"
            android:text="@string/aac_edit_text_about_intro"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/aac_global_border"
            android:padding="@dimen/aac_global_border"
            android:background="@color/aac_worldspace_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AACTextAppearance.heading"
                android:text="@string/aac_edit_text_about_heading_3_cont_desc"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:background="@color/aac_worldspace_white"
                android:textAppearance="@style/AACTextAppearance.body"
                android:text="@string/aac_edit_text_about_paragraph_3_cont_desc"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:contentDescription="@string/aac_edit_text_about_edit_text_1_cont_desc"
                android:inputType="text"
                android:background="@color/aac_worldspace_green"
                android:layout_margin="@dimen/aac_global_border"
                android:imeOptions="actionDone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/aac_global_border"
            android:padding="@dimen/aac_global_border"
            android:background="@color/aac_worldspace_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/aac_worldspace_white"
                android:textAppearance="@style/AACTextAppearance.heading"
                android:text="@string/aac_edit_text_about_heading_2_hints"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:background="@color/aac_worldspace_white"
                android:textAppearance="@style/AACTextAppearance.body"
                android:text="@string/aac_edit_text_about_paragraph_2_hints"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/aac_edit_text_about_edit_text_2_hint"
                android:textColorHint="@color/aac_worldspace_black"
                android:padding="@dimen/aac_global_border"
                android:background="@color/aac_worldspace_green"
                android:layout_margin="@dimen/aac_global_border"
                android:inputType="text"
                android:imeOptions="actionDone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/aac_global_border"
            android:padding="@dimen/aac_global_border"
            android:background="@color/aac_worldspace_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AACTextAppearance.heading"
                android:text="@string/aac_edit_text_about_heading_5_label_for"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:background="@color/aac_worldspace_white"
                android:textAppearance="@style/AACTextAppearance.body"
                android:text="@string/aac_edit_text_about_paragraph_5_label_for"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:background="@color/aac_worldspace_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="@dimen/aac_global_border"
                    android:labelFor="@+id/aac_edit_text_about_edit_text"
                    android:textAppearance="@style/AACTextAppearance.label"
                    android:text="@string/aac_edit_text_about_edit_text_3_label"
                    android:layout_gravity="center_horizontal" />

                <EditText android:id="@+id/aac_edit_text_about_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/aac_global_border"
                    android:inputType="textCapWords"
                    android:layout_weight="1"
                    android:background="@color/aac_worldspace_green"
                    android:layout_margin="@dimen/aac_global_border"
                    android:layout_gravity="center_horizontal"
                    android:imeOptions="actionDone"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/aac_global_border"
            android:padding="@dimen/aac_global_border"
            android:background="@color/aac_worldspace_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AACTextAppearance.heading"
                android:text="@string/aac_edit_text_about_heading_4_mixing"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:textAppearance="@style/AACTextAppearance.body"
                android:text="@string/aac_edit_text_about_paragraph_4_mixing_1"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:contentDescription="@string/aac_edit_text_about_edit_text_4_cont_desc"
                android:hint="@string/aac_edit_text_about_edit_text_4_hint"
                android:textColorHint="@color/aac_worldspace_black"
                android:background="@color/aac_worldspace_green"
                android:layout_margin="@dimen/aac_global_border"
                android:inputType="text"
                android:imeOptions="actionDone"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:textAppearance="@style/AACTextAppearance.body"
                android:text="@string/aac_edit_text_about_paragraph_6_mixing_2"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:background="@color/aac_worldspace_white"
                android:orientation="horizontal"
                android:layout_margin="@dimen/aac_global_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="@dimen/aac_global_border"
                    android:labelFor="@+id/aac_edit_text_about_mixing_edit_text"
                    android:textAppearance="@style/AACTextAppearance.label"
                    android:text="@string/aac_edit_text_about_edit_text_5_label"/>

                <EditText android:id="@+id/aac_edit_text_about_mixing_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/aac_global_border"
                    android:hint="@string/aac_edit_text_about_edit_text_5_hint"
                    android:textColorHint="@color/aac_worldspace_black"
                    android:layout_weight="1"
                    android:background="@color/aac_worldspace_green"
                    android:inputType="textCapWords"
                    android:imeOptions="actionDone"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
