<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dequesystems.accessibility101.labels.LabelsAboutFragment"
    android:background="@color/aac_story_fixed_background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout android:id="@+id/demoContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/aac_global_border"
            android:padding="@dimen/aac_global_border"
            android:elevation="@dimen/aac_elevation_level_1"
            android:orientation="vertical"
            android:background="@color/aac_background_text">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AACTextAppearance.heading"
                android:text="@string/aac_important_content_heading_top"
                android:background="@color/aac_background_text"
                android:padding="@dimen/aac_global_border"
                android:id="@+id/aac_important_fixed_heading_top"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:layout_margin="@dimen/aac_global_border"
                android:elevation="@dimen/aac_elevation_level_2"
                android:background="@color/aac_worldspace_white"
                android:id="@+id/layoutRed">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/AACTextAppearance.label"
                    android:text="@string/aac_labels_setting_1"
                    android:layout_weight="1"
                    android:labelFor="@id/switchRed"
                    android:id="@+id/aac_switch_label_one_top"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/AACTextAppearance.label"
                    android:layout_weight="0"
                    android:id="@+id/switchRed"
                    android:showText="false"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:layout_margin="@dimen/aac_global_border"
                android:elevation="@dimen/aac_elevation_level_2"
                android:background="@color/aac_worldspace_white"
                android:id="@+id/layoutGreen">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/AACTextAppearance.label"
                    android:text="@string/aac_labels_setting_2"
                    android:layout_weight="1"
                    android:labelFor="@id/switchGreen"
                    android:id="@+id/aac_switch_label_two_top"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/AACTextAppearance.label"
                    android:layout_weight="0"
                    android:id="@+id/switchGreen"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:layout_margin="@dimen/aac_global_border"
                android:elevation="@dimen/aac_elevation_level_2"
                android:background="@color/aac_worldspace_white"
                android:id="@+id/layoutBlue">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/AACTextAppearance.label"
                    android:text="@string/aac_labels_setting_3"
                    android:layout_weight="1"
                    android:labelFor="@id/switchBlue"
                    android:id="@+id/aac_switch_label_three_top"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/AACTextAppearance.label"
                    android:layout_weight="0"
                    android:id="@+id/switchBlue"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:id="@+id/demoContent2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/aac_global_border"
            android:padding="@dimen/aac_global_border"
            android:elevation="@dimen/aac_elevation_level_1"
            android:orientation="vertical"
            android:background="@color/aac_background_text"
            android:importantForAccessibility="yes">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AACTextAppearance.heading"
                android:text="@string/aac_important_content_heading_bottom"
                android:background="@color/aac_background_text"
                android:padding="@dimen/aac_global_border"
                android:id="@+id/aac_important_fixed_heading_bottom"/>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:elevation="@dimen/aac_elevation_level_2"
                android:background="@color/aac_worldspace_white"
                android:textAppearance="@style/AACTextAppearance.label"
                android:text="@string/aac_labels_setting_1"
                android:id="@+id/switchRed2"/>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:elevation="@dimen/aac_elevation_level_2"
                android:background="@color/aac_worldspace_white"
                android:textAppearance="@style/AACTextAppearance.label"
                android:text="@string/aac_labels_setting_2"
                android:id="@+id/switchGreen2"/>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/aac_global_border"
                android:elevation="@dimen/aac_elevation_level_2"
                android:background="@color/aac_worldspace_white"
                android:textAppearance="@style/AACTextAppearance.label"
                android:text="@string/aac_labels_setting_3"
                android:id="@+id/switchBlue2"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>