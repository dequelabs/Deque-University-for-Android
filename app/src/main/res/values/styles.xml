<resources>

    <!-- Base application theme. -->
    <style name="AACAppTheme" parent="Theme.AppCompat.Light">
        <item name="android:activatedBackgroundIndicator">@drawable/selected_menu_option</item>

        <item name="android:actionBarStyle">@style/AACAppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/AACAppTheme.ActionBar</item>

        <item name="android:actionMenuTextColor">@color/aac_navigation_drawer_text</item>

    </style>

    <style name="AACAppTheme.ActionBar" parent="@style/Widget.AppCompat.ActionBar">

        <item name="android:background">@color/aac_action_bar_background</item>
        <item name="background">@color/aac_action_bar_background</item>


        <item name="android:titleTextStyle">@style/AACAppTheme.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/AACAppTheme.ActionBar.TitleTextStyle</item>

    </style>

    <style name="AACAppTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/aac_navigation_drawer_text</item>
    </style>


    <style name="AACTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/aac_text_body</item>
    </style>

    <style name="AACTextAppearance.body">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AACTextAppearance.heading">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AACTextAppearance.navigation_drawer">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AACTextAppearance.label">
        <item name="android:textSize">18sp</item>
    </style>

    <color name="aac_text_body">@color/aac_worldspace_black</color>
    <color name="aac_background_text">@color/aac_worldspace_white</color>
    <color name="aac_story_background">@color/aac_deque_light_blue</color>
    <color name="aac_story_broken_background">@color/aac_deque_orange</color>
    <color name="aac_story_fixed_background">@color/aac_worldspace_green</color>

    <color name="aac_tab_bar_background">@color/aac_deque_dark_blue</color>
    <color name="aac_tab_bar_dimmed">@color/aac_worldspace_white</color>
    <color name="aac_tab_bar_selected">@color/aac_deque_orange</color>


    <color name="aac_navigation_drawer_background">@color/aac_worldspace_white</color>
    <color name="aac_navigation_drawer_text">@color/aac_deque_dark_blue</color>
    <color name="aac_navigation_drawer_selected">@color/aac_deque_pale_blue</color>

    <color name="aac_action_bar_background">@color/aac_deque_gray</color>

    <color name="aac_worldspace_blue">#083378</color>
    <color name="aac_worldspace_white">#F2F2F4</color>
    <color name="aac_worldspace_orange">#EF611A</color>
    <color name="aac_worldspace_green">#72BA32</color>
    <color name="aac_worldspace_red">#DB341A</color>
    <color name="aac_worldspace_black">#030210</color>

    <color name="aac_deque_dark_blue">#061B3C</color>
    <color name="aac_deque_light_blue">#0F3E89</color>
    <color name="aac_deque_pale_blue">#E1EDF9</color>
    <color name="aac_deque_gray">#E0E3E9</color>
    <color name="aac_deque_orange">#E23A00</color>
    <color name="aac_deque_green">#356B10</color>

</resources>
